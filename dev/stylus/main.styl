@import 'fonts.styl'
@import 'normalize.styl'
@import 'nib'


//Colores
rojo= #ff0000
gris = #464646
amarillo = #ffea00

//OOCSS

[class^="icon-"], [class*=" icon-"]
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

alinear()
	display inline-block
	vertical-align top
rem(pixel)
	(pixel/16)rem
html
	font-size: 16px
a
	text-decoration none
ul
p
figure
	margin 0
	padding 0
ul
	list-style none

.borde-superior
	background-color rojo
	height rem(24)
header
	background-color black
	padding-top 1rem
	padding-bottom 1rem
	.formulario
		input[type="text"]
			width rem(206)
			height rem(47)
			border-radius 3px 0 0 3px
			box-shadow inset 3px 2px 1px rgba(0,0,0,.3)
		button
			width rem(115)
			height rem(52)
			background-color rojo
			border none
			color white
	.menu-principal
		padding-top .7rem
		li
			alinear()
			margin-right .5rem
			a
				background-color gris
				color white
				display block
				padding .3rem
			&:last-child
				margin-right 0
				position relative
				a
					background-color transparent
					position absolute